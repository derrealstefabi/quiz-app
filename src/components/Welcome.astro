---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
import React from "react";
---

<div id="container">
	<main class="flex items-center justify-center pt-16 pb-4">
		<div class="flex-1 flex flex-col items-center gap-16 min-h-0">
			<div class="max-w-[300px] w-full space-y-6 px-4">
				<nav class="rounded-3xl border border-gray-200 p-6 dark:border-gray-700 space-y-4">
					<p class="leading-6 text-black font-bold text-2xl
					text-center mb-8">
						What to do?
					</p>
					<ul class="flex items-center justify-center gap-3">
						<li key="1" >
							<a href={'create'}
							  class={`rounded-md bg-sky-500 px-5 py-2.5 text-sm leading-5 font-semibold text-white hover:bg-sky-700`}
						>Create</a>
						</li>
						<li key="2">
							<a href={'play'}
							   class={`rounded-md bg-sky-500 px-5 py-2.5 text-sm leading-5 font-semibold text-white hover:bg-sky-700`}
							>Play</a>
						</li>
					</ul>
				</nav>
			</div>
		</div>
	</main>
</div>